#include <stdio.h>
#include <math.h>
int main(){
	
	float area, comprimento, raio;
	
	printf("Informa o raio do adesivo: ");
	scanf("%f", &raio);
	
	area = 3.14* pow(raio,2);
	comprimento = 2*3.14*raio;
	
	printf("Area do adesivo: %.2f\n", area);
	printf("Comprimento da borda: %.2f\n", comprimento);
	
	
	return 0;
}
